<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFontIcons.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Fonts -->
            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeRegularOTF">
                <On Platform="Android" Value="Fonts/FontAwesome5FreeRegular.otf#Regular" />
                <On Platform="WPF" Value="Assets/Fonts/FontAwesome5FreeRegular.otf#Font Awesome 5 Free Regular" />
                <On Platform="iOS" Value="FontAwesome5Free-Regular" />
                <On Platform="UWP" Value="/Assets/Fonts/FontAwesome5FreeRegular.otf#Font Awesome 5 Free" />
            </OnPlatform>

            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeRegularTTF">
                <On Platform="Android" Value="Fonts/FontAwesome5FreeRegular.ttf#Regular" />
                <On Platform="WPF" Value="Assets/Fonts/FontAwesome5FreeRegular.ttf#Font Awesome 5 Free Regular" />
                <On Platform="iOS" Value="FontAwesome5Free-Regular" />
                <On Platform="UWP" Value="/Assets/Fonts/FontAwesome5FreeRegular.ttf#Font Awesome 5 Free" />
            </OnPlatform>

        </ResourceDictionary>
    </Application.Resources>
</Application>